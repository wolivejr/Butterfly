@model IEnumerable<BugTracker.Models.Bug>
@using Microsoft.AspNetCore.Authorization;
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Bugs";
}

<table class="table table-striped table-dark table-hover text-center table-responsive text-nowrap">
    <thead class="thead-dark">
        <tr>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th style="width:10%">
                Submitted by:
            </th>
            <th style="width:10%"></th>
            <th style="width:10%"></th>
            @if (this.User.IsInRole("User"))
            {
            <th style="width:10%"></th>
            <th style="width:10%"></th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Time)
            </td>

            @if (this.User.IsInRole("User"))
            {
            <td class="align-middle">
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-block">Edit</a>
            </td>
            <td class="align-middle">
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-block">Delete</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>

<div class="d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-lg btn-success">Submit New Bug</a>
</div>

