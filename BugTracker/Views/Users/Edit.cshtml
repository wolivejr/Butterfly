@model BugTracker.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" required>
                    <option value="" selected>Choose a Role Level</option>
                    <option value="User">User</option>
                    <option value="Contributor">Contributor</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button asp-action="Index" class="btn btn-secondary btn-block" formnovalidate>Cancel</button>
                <button type="submit" class="btn btn-success btn-block">Save Changes</button>
            </div>
            <div class="form-group">
                <p class="text-center">Warning! This action cannot be undone!</p>
                <button asp-action="Delete" class="btn btn-danger btn-block" formnovalidate>Delete Entry</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
