@model IEnumerable<BugTracker.Models.User>

@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped table-dark table-hover text-center table-responsive-xl">
    <caption hidden>List of Current Users</caption>
    <thead>
        <tr>
            <th style="width:30%">
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th style="width:40%">
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th style="width:15%"></th>
            <th style="width:15%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-block">Edit</a>
                </td>
                <td>
                    <a type="button" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-block">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
