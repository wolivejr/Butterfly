@model IEnumerable<BugTracker.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table mat-table class="table table-striped table-hover">
    <caption hidden>List of Current Users</caption>
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th scope="col" />
            <th scope="col" />
            <th scope="col" />
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-block">Edit</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID"  class="btn btn-secondary btn-block">Details</a>
            </td>
            <td>
                <a type="button" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-block">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
