<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Bug Tracker</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

    <body>
        <div id="Master" class="container-fluid">
            <div class="row flex-row">
                <div id="SideBar" class="col-2 flex-column navbar">
                    
                    <div id="Header" class="row flex-shrink-1 navbar-brand text-nowrap">
                        Bug Tracker
                    </div>
                    <div id="Navigation">
                        <partial name="_LoginPartial" />
                        <div id="NavItem" class=""><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></div>
                        <div id="NavItem" class=""><a asp-area="" asp-controller="Bugs" asp-action="Index">Bugs</a></div>
                    </div>
                    
                    <div id="Footer" class="text-nowrap flex-shrink-1">
                        Created by: William Olive, JR
                    </div>

                </div>
                <div id="Body" class="col-10">
                    <div id="MainContent" class="row flex-row">
                        @RenderBody()
                    </div>
                </div>

            </div>
    </div>
</body>


</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)