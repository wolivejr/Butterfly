@model Butterfly.Models.Bug

@{
    ViewData["Title"] = "Close";
}

<h1>Edit Bug</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control" required>
                    <option value="" selected>Choose a Priority Level</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                    <option value="Critical">Critical</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" required>
                    <option value="" selected>Choose a Category</option>
                    <option value="Graphical">Graphical</option>
                    <option value="Crash">Crash</option>
                    <option value="Performance">Performance</option>
                    <option value="User Error">User Error</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group hide">
                <label asp-for="Solution" class="control-label"></label>
                <textarea asp-for="Solution" class="form-control" required></textarea> 
                <span asp-validation-for="Solution" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="Status" value="Closed" />
                <input type="hidden" asp-for="SubmissionDate" value="@Model.SubmissionDate" />
                <input type="hidden" asp-for="SubmissionTime" value="@Model.SubmissionTime" />
                <input type="hidden" asp-for="Submitter" value="@Model.Submitter" />
                <input type="hidden" asp-for="SolutionDate" value="@Model.SolutionDate" />
                <input type="hidden" asp-for="SolutionTime" value="@Model.SolutionTime" />
                <input type="hidden" asp-for="SolutionUser" value="@this.User.Identity.ToString()" />
            </div>
            
            <div class="d-xl-flex btn-group-lg justify-content-xl-end">
                <button asp-action="Index" class="btn btn-secondary btn-lg mx-1" formnovalidate>Cancel</button>
                <button type="submit" class="btn btn-success btn-lg mx-1">Close</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
