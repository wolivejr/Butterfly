@model IEnumerable<Butterfly.Models.Bug>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Bug Table";
}

<div class="row flex-row">
    <table class="table table-striped table-hover text-center">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th class="text-nowrap">Submitted by</th>
                <th>@Html.DisplayNameFor(model => model.Priority)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Solution)</th>
                <th class="text-nowrap">Resolved by </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left align-middle"> @Html.DisplayFor(modelItem => item.Status)      </td>
                    <td class="text-left align-middle"> @Html.DisplayFor(modelItem => item.Description) </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Submitter)       <br />
                        @Html.DisplayFor(modelItem => item.SubmissionDate)  <br />
                        @Html.DisplayFor(modelItem => item.SubmissionTime)
                    </td>

                    <td class="align-middle">           @Html.DisplayFor(modelItem => item.Priority)</td>
                    <td class="align-middle">           @Html.DisplayFor(modelItem => item.Category)</td>
                    <td class="align-middle text-left"> @Html.DisplayFor(modelItem => item.Solution)</td>

                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.SolutionUser)<br />
                        @Html.DisplayFor(modelItem => item.SolutionDate)<br />
                        @Html.DisplayFor(modelItem => item.SolutionTime)
                    </td>

                    <td class="align-middle"><a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-block">Close</a></td>
                    <td class="align-middle border-right"><a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-block">Delete</a></td>
                </tr>
            }
        </tbody>
        <tfoot class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th class="text-nowrap">Submitted by</th>
                <th>@Html.DisplayNameFor(model => model.Priority)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Solution)</th>
                <th class="text-nowrap">Resolved by </th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>
<div class="row flex-row">
    <a asp-action="Create" class="btn btn-xl btn-success shadow float-right" asp-controller="Bugs">Submit New Bug</a>
</div>